@model PalletRecords.Models.Pallet

<h1><strong>Delete Pallet</strong></h1>
<hr class="custom-hr"> 
<div class="container d-flex justify-content-center align-items-center">
    <div class="card shadow-lg w-50" style="border-radius: 15px; overflow: hidden;">
        <!--<div class="card-header bg-danger text-white text-center">
            <h3 class="card-title">Delete Pallet: </h3>
        </div>-->
        
        <div class="card-body text-center">
             <h3 class="card-title text-danger">Delete Pallet: @Model.Number</h3>
            <hr class="custom-hr" />
            <h4 class="mb-4">Are you sure you want to delete this pallet?</h4>
            <!-- Separator -->
            <hr class="my-4" />
            <dl class="row text-start">
                <dt class="col-sm-4">Number</dt>
                <dd class="col-sm-8">@Model.Number</dd>

                <dt class="col-sm-4">Weight</dt>
                <dd class="col-sm-8">@Model.Weight</dd>

                <dt class="col-sm-4">Material</dt>
                <dd class="col-sm-8">@Model.Material</dd>

                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4">Number of Items</dt>
                <dd class="col-sm-8">@Model.NumberOfItems</dd>
            </dl>

            <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" class="mt-4">
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

