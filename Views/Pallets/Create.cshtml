@model PalletRecords.Models.ConfiguredPallet

<h1 class="text-center">Create Pallet</h1>
<hr class="custom-hr"/>

@if (Model != null)
{
    <form asp-action="Create" method="post" class="container">
        <div class="row gx-5">
            <!-- Pallet Details -->
            <div class="col-md-6">
                <div class="card shadow-lg " style="border-radius: 15px; overflow: hidden;">
                    <div class="card-body">
                        <h3 class="card-title text-primary">Pallet Details</h3>
                        <hr class="custom-hr" />
                        
                        <div class="mb-3">
                            <label asp-for="Pallet.Number" class="form-label">Number</label>
                            <input asp-for="Pallet.Number" class="form-control" placeholder="Pallet Number" />
                            <span asp-validation-for="Pallet.Number" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Pallet.InputDate" class="form-label">Input Date</label>
                            <input asp-for="Pallet.InputDate" class="form-control" type="datetime-local" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Pallet.Weight" class="form-label">Pallet Weight</label>
                            <input asp-for="Pallet.Weight" class="form-control" type="number" step="0.01" placeholder="Weight" />
                            <span asp-validation-for="Pallet.Weight" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Pallet.Material" class="form-label">Material</label>
                            <input asp-for="Pallet.Material" class="form-control" placeholder="Material" />
                            <span asp-validation-for="Pallet.Material" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Pallet.Description" class="form-label">Description</label>
                            <textarea asp-for="Pallet.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Pallet.Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pallet Configuration -->
            <div class="col-md-6">
                <div class="card shadow-lg " style="border-radius: 15px; overflow: hidden;">
                    <div class="card-body">
                        <h3 class="card-title text-success">Pallet Configuration</h3>
                        <hr class="custom-hr" />

                        <div class="mb-3">
                            <label asp-for="PalletConfig.Name" class="form-label">Name</label>
                            <input asp-for="PalletConfig.Name" class="form-control" placeholder="Name" />
                            <span asp-validation-for="PalletConfig.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PalletConfig.Weight" class="form-label">Weight</label>
                            <input asp-for="PalletConfig.Weight" class="form-control" type="number" step="0.01" placeholder="Batch Weight" />
                            <span asp-validation-for="PalletConfig.Weight" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PalletConfig.Description" class="form-label">Configuration Description</label>
                            <textarea asp-for="PalletConfig.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="PalletConfig.Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="text-center mt-2">
            <button type="submit" class="btn btn-primary me-2">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}